@using WebVL.Models;

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Admin VinLaptop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">

    <script src="~/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>




    <link href="~/Admin/main.css" rel="stylesheet">

</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <img src="~/img/logo.png" height="50px" width="50px" />
                <div class="header__pane ml-auto" style="padding-left:10px">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>    
            <div class="app-header__content">
                <div class="app-header-left" style="padding-left:20px">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>
                    <ul class="header-menu nav">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-link-icon fa fa-database"> </i>
                                Statistics
                            </a>
                        </li>
                        <li class="btn-group nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-link-icon fa fa-edit"></i>
                                Projects
                            </a>
                        </li>
                        <li class="dropdown nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-link-icon fa fa-cog"></i>
                                Settings
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        @{
                                            var adminNAME = Session["TaikhoanAdminName"];
                                        }
                                        @if (adminNAME != null)
                                        {
                                            @adminNAME
                                        }



                                    </div>
                                    <div class="widget-subheading">
                                        Admin VinLaptop
                                    </div>
                                </div>
                                <div class="widget-content-left">
                                    <div class="btn-group">
                                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                            <img width="42" class="rounded-circle" src="#" alt="">
                                            <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                        </a>
                                        <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                            <input type="button" tabindex="0" class="btn btn-primary dropdown-item" value="User Account" onclick="location.href='@Url.Action("Details", "AdminAccounts", new { id = Session["TaikhoanAdminID"]})'" />
                                            <button type="button" tabindex="0" class="dropdown-item">Settings</button>
                                            <h6 tabindex="-1" class="dropdown-header">Header</h6>
                                            <button type="button" tabindex="0" class="dropdown-item">Actions</button>
                                            <div tabindex="-1" class="dropdown-divider"></div>

                                            @if (adminNAME != null)
                                            {
                                                <input type="button" tabindex="0" class="dropdown-item text-danger" value="Sign Out" onclick="location.href='@Url.Action("LogoutAdmin", "AdHome")'" />
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="widget-content-right header-user-info ml-3">
                                    <button type="button" class="btn-shadow p-1 btn btn-primary btn-sm show-toastr-example">
                                        <i class="fa text-white fa-calendar pr-1 pl-1"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui-theme-settings">
        </div>
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            <li class="app-sidebar__heading">Products</li>
                            <li>
                                <a href="https://localhost:44344/AdHome/Index">
                                    <i class="metismenu-icon pe-7s-diamond"></i>
                                    Product
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Categories</li>
                            <li>
                                <a href="https://localhost:44344/AdHome/Category">
                                    <i class="metismenu-icon pe-7s-eyedropper"></i>
                                    Category
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Customers</li>
                            <li>
                                <a href="https://localhost:44344/ApplicationUsers/Index">
                                    <i class="metismenu-icon pe-7s-user"></i>
                                    Customer
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Orders</li>
                            <li>
                                <a href="https://localhost:44344/OrderSp">
                                    <i class="metismenu-icon pe-7s-box1"></i>
                                    Order
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Status</li>
                            <li>
                                <a href="https://localhost:44344/Statt/Index">
                                    <i class="metismenu-icon pe-7s-news-paper"></i>
                                    Status
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Statistics</li>
                            <li>
                                <a href="#">
                                    <i class="metismenu-icon pe-7s-graph"></i>
                                    Sales Statistic in Month
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="metismenu-icon pe-7s-graph1"></i>
                                    Sales Statistic in Year
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="metismenu-icon pe-7s-graph2"></i>
                                    Top 10 Selling Products
                                </a>
                            </li>
                        </ul>
                        <script type="text/javascript">
                            const curLoc = location.href;
                            const menuItem = document.querySelectorAll('a');
                            const menuLength = menuItem.length
                            for (let i = 0; i < menuLength; i++) {
                                if (menuItem[i].href === curLoc) {
                                    menuItem[i].className = 'mm-active'
                                }
                            }
                        </script>
                    </div>
                </div>

            </div>
            <div class="app-main__outer">
                <div class="app-main__inner">
                    @RenderBody()
                </div>
            </div>
            <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
        </div>
    </div>
    <script type="text/javascript" src="~/Admin/assets/scripts/main.js"></script>



</body>

</html>
