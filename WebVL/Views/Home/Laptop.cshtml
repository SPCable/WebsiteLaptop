@model IEnumerable<WebVL.Models.Product>

@{
    ViewBag.Title = ViewBag.Tieude;
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<body>
    <div class="col-lg-9  order-1 order-lg-2 mb-5 mb-lg-	0">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="product-item">
                        <div class="pi-pic">
                            @if (item.productDiscout > 0)
                            {
                                <div class="tag-sale">ON SALE</div>
                            }

                            <a href="@Url.Action("Product","Home",new { id = item.ProductId})">
                                <img src="~/img/product/@item.productImg" alt="@item.productImg" width="200" height="200">
                            </a>
                            <div class="pi-links">
                                <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a>
                                <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                            </div>
                        </div>

                        <div class="pi-text">
                            <h6>  @Html.DisplayFor(modelItem => item.productPrice)</h6>
                            <p> @Html.DisplayFor(modelItem => item.productName)</p>
                        </div>
                    </div>
                </div>
            }

            <div class="text-center w-100 pt-3">
                <button class="site-btn sb-line sb-dark">LOAD MORE</button>
            </div>
        </div>
    </div>
</body>
