@model WebVL.Models.Category

@{
    ViewBag.Title = "CreateCate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("CreateCate", "AdHome", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{

    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">

                <h3>Danh Mục</h3>
            </div>

        </div>
    </div>
    <div class="main-card mb-3 card">

        <div class="card-body">


            <h5 class="card-title">Thêm Danh Mục</h5>

            <form class="needs-validation" novalidate>

                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Category</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.categoryId, "Mã Danh Mục", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4 mb-3">
                            @Html.EditorFor(model => model.categoryId, new { htmlAttributes = new { @class = "form-control" } })
                            <a style="color:red">@ViewBag.categoryId</a>
                            <a style="color:red">@ViewBag.checkIDCate</a>
                            
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryName, "Tên Danh Mục", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4 mb-3">
                            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                            <a style="color:red">@ViewBag.CategoryName</a>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryImg, "Ảnh Danh Mục", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4 mb-3">
                            <input type="file" accept="image/*" name="PicDanhMucUpload" />
                            @Html.ValidationMessageFor(model => model.CategoryImg, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BrandId, "Mã Thương Hiệu", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4 mb-3">
                            @Html.EditorFor(model => model.BrandId, new { htmlAttributes = new { @class = "form-control" } })
                            <a style="color:red">@ViewBag.BrandId</a>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BrandName, "Tên Thương Hiệu", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4 mb-3">
                            @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                            <a style="color:red">@ViewBag.BrandName</a>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="invalidCheck">
                            <label class="form-check-label" for="invalidCheck">
                                Ẩn danh sách
                            </label>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-10 col-md-2">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                            <a class="btn btn-danger pull-right" style="color:white" href="https://localhost:44344/AdHome/Category">Hủy</a>
                        </div>
                    </div>
                </div>

            </form>

            <script>
                // Example starter JavaScript for disabling form submissions if there are invalid fields
                (function () {
                    'use strict';
                    window.addEventListener('load', function () {
                        // Fetch all the forms we want to apply custom Bootstrap validation styles to
                        var forms = document.getElementsByClassName('needs-validation');
                        // Loop over them and prevent submission
                        var validation = Array.prototype.filter.call(forms, function (form) {
                            form.addEventListener('submit', function (event) {
                                if (form.checkValidity() === false) {
                                    event.preventDefault();
                                    event.stopPropagation();
                                }
                                form.classList.add('was-validated');
                            }, false);
                        });
                    }, false);
                })();
            </script>
        </div>
    </div>
}