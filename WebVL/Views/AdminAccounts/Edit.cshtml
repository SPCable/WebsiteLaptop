@model WebVL.Models.AdminAccount

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">

                <h3>Quản Lý Tài Khoản Cá Nhân</h3>
            </div>

        </div>
    </div>
    <div class="main-card mb-3 card">

        <div class="card-body">


            <h5 class="card-title">Sửa Thông Tin Cá Nhân</h5>

            <form class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.AdminId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserAdmin, "Tên Tài Khoản", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.UserAdmin, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserAdmin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PassAdmin, "Mật Khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            <input class="form-control" type="password" value="@Model.PassAdmin" id="PassAdmin" name="PassAdmin"/>
                            <input type="checkbox" onclick="myFunction()">Hiện mật khẩu
                            @*@Html.EditorFor(model => model.PassAdmin, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.ValidationMessageFor(model => model.PassAdmin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AdminName, "Tên Admin", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdminName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-10 col-md-2">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                            <input type="button" value="Hủy" class="btn btn-danger pull-right" style="color:white" onclick="location.href='@Url.Action("Details", "AdminAccounts", new { id = Model.AdminId })'" />
                        </div>
                        <div class="col-md-offset-5 col-md-2">

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        function myFunction() {
            var x = document.getElementById("PassAdmin");
            if (x.type === "password") {
                x.type = "text";
            }
            else {
                x.type = "password";
            }
        }
    </script>
}